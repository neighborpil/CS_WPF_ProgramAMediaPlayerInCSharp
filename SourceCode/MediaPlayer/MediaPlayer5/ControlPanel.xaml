<Window x:Name="CtrlPanel" x:Class="Player2.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player2"
        mc:Ignorable="d"
        Title="Media Control Panel" Height="120" Width="400" MinWidth="400" MinHeight="120">
    <Grid Margin="0,0,2,3.808">
        <Slider  Height="24" Margin="87.145,0,10,35.462" x:Name="speedSlider" VerticalAlignment="Bottom" ValueChanged="SpeedSlider_ValueChanged" TickPlacement="BottomRight" BorderBrush="Aquamarine"  ClipToBounds="True" Value="1" SmallChange="0.01" Maximum="2"  PreviewMouseDown="SpeedSlider_PreviewMouseDown" PreviewMouseUp="SpeedSlider_PreviewMouseUp" Minimum="0.5" />
        <Label Height="28" HorizontalAlignment="Left" Margin="21.52,0,0,35.654" x:Name="label3" VerticalAlignment="Bottom" Width="60.625" Content="Speed:"/>
        <Slider  Height="22" Margin="87.145,0,10,3.94" x:Name="balanceSlider" VerticalAlignment="Bottom" Minimum="-1" ValueChanged="BalanceSlider_ValueChanged"  ClipToBounds="True" Maximum="1" />
        <Label Height="28" HorizontalAlignment="Left" Margin="21.52,0,0,3.94" x:Name="label4" VerticalAlignment="Bottom" Width="60.625" Content="Balance:"/>

    </Grid>
</Window>
