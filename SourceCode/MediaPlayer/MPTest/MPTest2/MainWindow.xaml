<Window x:Class="MPTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="Me" HorizontalAlignment="Left" Height="368" Margin="47,10,0,0" VerticalAlignment="Top" Width="735" Source="..\..\..\..\media\testaudio.mp3" LoadedBehavior="Manual"/>
        <Button x:Name="StartBtn" Content="Start" HorizontalAlignment="Left" Margin="547,389,0,0" VerticalAlignment="Top" Width="75" Click="StartBtn_Click"/>
        <Button x:Name="StopBtn" Content="Stop" HorizontalAlignment="Left" Margin="627,389,0,0" VerticalAlignment="Top" Width="75" Click="StopBtn_Click"/>
        <Button x:Name="PauseBtn" Content="Pause" HorizontalAlignment="Left" Margin="707,389,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.142,0.511" Click="PauseBtn_Click"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.972,0.58" Width="32" Value="0.5" Maximum="1" ValueChanged="Slider_ValueChanged" Orientation="Vertical" Height="368" />

    </Grid>
</Window>
